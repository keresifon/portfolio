

// String buildConfigJSONFile = 'build-config.json'
// LinkedHashMap buildConfigs = [:]

node {
    withEnv (
    registry = 'keresifon/jenkins-test'
    registryCredential = 'keresifon'
    dockerImage = ''
     withDockerRegistry(credentialsId: 'Github')
    ) {
    stage('Cloning our Git') { 

          checkout scm
              // sh"git 'https://github.com/keresifon/portfolio.git' "
          
        } 

    stage('Building our image') { 

        //    sh 'docker build -f Dockerfile -t keresifon/jenkins-test:latest'

              sh 'dockerImage = docker.build registry + ":latest"'


        

        }

        stage('Deploy our image') { 

         

                script { 
                    withDockerRegistry(credentialsId: 'Github')
                     { 

                        dockerImage.push() 

                    }

          

            }

        } 

        stage('Cleaning up') { 

            

                sh "docker rmi $registry:latest" 

        

        } 
}
    // if (currentBuild.currentResult == 'SUCCESS') {
    //     stage('Deploy') {
    //         sh 'make publish'
    //     }
    // }
}