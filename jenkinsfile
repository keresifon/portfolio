pipeline {
  agent any
  stages {
    stage('Cloning our Git') {
      steps {
        git 'https://github.com/keresifon/portfolio.git'
        script {
          String buildConfigJSONFile = 'build-configs.json'
          LinkedHashMap buildConfigs = [:]

          buildConfigs = readJSON file: buildConfigJSONFile , returnPojo: true
        }

        script {
          triggers {
            cron('H */4 * * 1-5')
          }
        }

      }
    }

    stage('Building our image') {
      steps {
        script {
          dockerImage = docker.build registry + ":latest"
        }

      }
    }

    stage('Deploy our image') {
      steps {
        script {
          withDockerRegistry(credentialsId: 'Github')
          {

            dockerImage.push()

          }
        }

      }
    }

    stage('Cleaning up') {
      steps {
        sh "docker rmi $registry:latest"
      }
    }

  }
  environment {
    registry = 'keresifon/jenkins-test'
    registryCredential = 'keresifon'
    dockerImage = ''
  }
}